{
  "extends": "@tsconfig/node10/tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true
  }
}
